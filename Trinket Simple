import turtle
tina = turtle.Turtle()
tina.shape('turtle')

your_name = input("What's your name?")

tina.penup()
tina.forward(20)
tina.write("Why, hello, " + your_name + "!")
tina.backward(20)

tina.right(90)
tina.forward(25)

your_age = input("How old are you?")
tina.pendown
tina.penup()
tina.forward(20)
tina.write("Your so young, "+ your_name + "!")
tina.backward(20)
tina.right(90)
tina.forward(25)
say_what = "What should I say?"
tina.right(90)
tina.forward(25)
